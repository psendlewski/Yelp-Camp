<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
<a href="/campgrounds/new">Add New Campground</a>
</div>
<% for (let c of campgrounds) {%> 
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4"> <!--After size medium and above take 4 units from 12 (1/3 of a row)-->
        <img class="img-fluid" src="<%= c.image %>" alt="">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
            <%= c.title %>
          </h5>
          <p class="card-text"><%= c.description %>
          <small class="text-muted"><%= c.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= c._id %>">View <%= c.title %></a>
        </div>
      </div>
    </div>
  </div>
  <% }%></div>
